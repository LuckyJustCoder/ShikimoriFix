{
	"name": "Shikimori Fix",
	"version": "1.2",
	"description": "Fix for shikimori.one",
	"permissions": ["tabs", "http://*/*", "webNavigation", "activeTab"],
	"background": {
		"scripts":["background.js"]
	},
	"content_scripts": [{
		"matches":["https://shikimori.one/*"],
		"js": ["jquery-3.4.1.js", "contentscript.js"]
    }],
	"browser_action": {
		"default_title": "Shikimori Fix",
		"default_icon": "icon.png",
	  	"default_popup": "popup.html"
	},
	"manifest_version": 2
}
