{
	"name": "Shikimori Fix",
	"version": "1.7",
	"description": "The script adds a button to look at the site shikimori.one",
	"permissions": [
		"webNavigation",
		"https://shikimori.one/animes",
		"storage"
	],
	"author": "lakujust",
	"background": {
		"scripts": ["js/background.js"]
	},
	"content_scripts": [{
		"matches": ["https://shikimori.one/*"],
		"js": [
			"js/jquery-3.4.1.js",
			"js/content.js"
		]
	}],
	"browser_action": {
		"default_title": "Shikimori Fix",
		"default_icon": "resource/icon.png",
		"default_popup": "popup.html"
	},
	"manifest_version": 2
}
